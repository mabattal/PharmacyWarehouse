
@{
    ViewData["Title"] = "Update";
}

@model SuplierDto
<h1>Update Suplier</h1>

<div class="row">

    <div class=col-md-6>

        <form asp-action="Update" method="post" asp-controller="Suplier">
            <input type="hidden" asp-for="Id" />
            
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
                        
            <div class="form-group">
                <label asp-for="TaxNumber"></label>
                <input asp-for="TaxNumber" class="form-control" />
                <span asp-validation-for="TaxNumber" class="text-danger"></span>
            </div>

            <div class="form-group">

                <input type="submit" value="Update" class="btn-primary" />

            </div>
        </form>
    </div>
</div>