
@{
    ViewData["Title"] = "Index";
}
@model List<MedicineWithSuplierDto>

<h1>Medicines</h1>

<a class="btn btn-success" asp-controller="Medicine" asp-action="Save">Add Medicine</a>
<table class="table table-striped">
    <thead>
        <tr>
            <td>Id</td>
            <td>Barcode</td>
            <td>Name</td>
            <td>Price</td>
            <td>Stock</td>
            <td>Suplier</td>
            <td>CreatedDate</td>
            <td>Actions</td>
        </tr>
    </thead>
    <tbody>

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Barcode</td>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.Suplier.Name</td>
                <td>@item.CreatedDate</td>
                <td>
                    <a class="btn btn-warning" asp-controller="Medicine" asp-action="Update" asp-route-id="@item.Id">Update</a>
                    <a class="btn btn-danger" asp-controller="Medicine" asp-action="Remove" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>

