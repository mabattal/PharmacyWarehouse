
@{
    ViewData["Title"] = "Update";
}

@model MedicineDto
<h1>Update Medicine</h1>

<div class="row">

    <div class=col-md-6>

        <form asp-action="Update" method="post" asp-controller="Medicine">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="SuplierId"></label>
                <select asp-for="SuplierId" asp-items="ViewBag.supliers" class="form-control">
                    <option value="">Please choose</option>
                </select>
                <span asp-validation-for="SuplierId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Barcode"></label>
                <input asp-for="Barcode" class="form-control" />
                <span asp-validation-for="Barcode" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Stock"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="form-group">

                <input type="submit" value="Update" class="btn-primary" />

            </div>
        </form>
    </div>
</div>